        android:textStyle="bold"
        android:id="@+id/textView30"
        android:textColor="#4e4e4e"
        android:layout_above="@+id/textView22"
        android:layout_toLeftOf="@+id/switch3"
        android:layout_toStartOf="@+id/switch3" />

