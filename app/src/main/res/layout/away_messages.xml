        android:id="@+id/view4"
        android:layout_below="@+id/awaymessages"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp">
    </View>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="450dp"
        android:layout_height="280dp"
        android:fillViewport="false"
        android:layout_marginTop="50dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your away message is automatically sent to customers who text outside your office hours. Set it below.Be sure to turn it  (top right) else it wont go out!"
        android:textSize="12dp"
        android:id="@+id/textViewtext"

        android:layout_below="@+id/switch3"
        android:layout_alignLeft="@+id/textView20"
        android:layout_alignStart="@+id/textView20" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Text"
        android:textColor="#4e4e4e"
        android:textStyle="bold"
        android:textAllCaps="true"
        android:id="@+id/textView20"

        android:layout_below="@+id/textViewtext"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp" />

