<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Close"
        android:id="@+id/button11"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
         />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Send"
        android:background="#33c5f3"
        android:id="@+id/button12"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/button11"
        android:layout_toStartOf="@+id/button11"
        android:textColor="#fff" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/editText12"
        android:background="@drawable/box"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/button12"
        android:layout_toLeftOf="@+id/button12" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/editText13" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hello,This is android bot"
        android:id="@+id/textView33"
        android:textSize="20dp"
        android:layout_alignBottom="@+id/editText13"
        android:layout_toRightOf="@+id/editText13"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Android Bot"
        android:textAllCaps="true"
        android:textColor="#515151"
        android:textStyle="bold"
        android:id="@+id/textView34"
        android:layout_above="@+id/textView33"
        android:layout_alignLeft="@+id/textView33"
        android:layout_alignStart="@+id/textView33"
        android:textSize="17dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 days ago"
        android:id="@+id/textView35"
        android:textSize="14dp"
        android:layout_above="@+id/textView33"
        android:layout_alignRight="@+id/textView33"
        android:layout_alignEnd="@+id/textView33" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/view5"
        android:src="@drawable/ic_launcher"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/textView33"
        android:layout_alignRight="@+id/button11"
        android:layout_alignEnd="@+id/button11" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi this is messenger bot"
        android:id="@+id/textView36"
        android:layout_alignBottom="@+id/view5"
        android:layout_toLeftOf="@+id/view5"
        android:layout_toStartOf="@+id/view5"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Messenger Bot"
        android:id="@+id/textView37"
        android:textSize="17dp"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="#515151"
        android:layout_alignTop="@+id/view5"
        android:layout_toLeftOf="@+id/view5"
        android:layout_toStartOf="@+id/view5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 day ago"
        android:id="@+id/textView38"
        android:layout_alignTop="@+id/textView37"
        android:layout_alignLeft="@+id/textView36"
        android:layout_alignStart="@+id/textView36"
        android:textIsSelectable="false"
        android:textSize="14dp" />


</RelativeLayout>