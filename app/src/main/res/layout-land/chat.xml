<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="385dp"
        android:id="@+id/scrollView"
        android:fillViewport="false"
        android:layout_alignParentTop="true">

    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Close"
        android:id="@+id/button11"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/scrollView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:background="#33c5f3"
        android:id="@+id/button12"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/button11"
        android:layout_toStartOf="@+id/button11"
        android:layout_below="@+id/scrollView"
        android:textColor="#fff" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText12"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/button12"
        android:layout_toLeftOf="@+id/button12"
        android:layout_below="@+id/scrollView" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/editText13" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hello,This is android bot"
        android:id="@+id/textView33"
        android:textSize="25dp"
        android:layout_alignBottom="@+id/editText13"
        android:layout_toRightOf="@+id/editText13"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Android Bot"
        android:id="@+id/textView34"
        android:layout_above="@+id/textView33"
        android:layout_alignLeft="@+id/textView33"
        android:layout_alignStart="@+id/textView33"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="27 days ago"
        android:id="@+id/textView35"
        android:layout_alignTop="@+id/textView34"
        android:layout_alignRight="@+id/textView33"
        android:layout_alignEnd="@+id/textView33"
        android:layout_marginRight="47dp"
        android:layout_marginEnd="47dp"
        android:textSize="16dp" />

    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/view5"
        android:src="@drawable/ic_launcher"
        android:layout_below="@+id/textView33"
        android:layout_toRightOf="@+id/button12"
        android:layout_toEndOf="@+id/button12"
        android:layout_marginTop="33dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi this is messenger bot"
        android:id="@+id/textView36"
        android:layout_alignBottom="@+id/view5"
        android:layout_toLeftOf="@+id/view5"
        android:layout_toStartOf="@+id/view5"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Messenger Bot"
        android:id="@+id/textView37"
        android:textSize="20dp"
        android:layout_alignTop="@+id/view5"
        android:layout_toLeftOf="@+id/view5"
        android:layout_toStartOf="@+id/view5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="27 minutes ago"
        android:id="@+id/textView38"
        android:layout_alignTop="@+id/textView37"
        android:layout_alignLeft="@+id/textView36"
        android:layout_alignStart="@+id/textView36"
        android:textIsSelectable="false"
        android:textSize="16dp" />


</RelativeLayout>