<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="android bot"
        android:textAllCaps="true"
        android:textColor="#515151"
        android:textStyle="bold"
        android:id="@+id/textView39"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/view6"
        android:layout_toEndOf="@+id/view6"
        android:layout_marginLeft="20dp"
        android:textSize="10dp" />

<com.mikhaellopez.circularimageview.CircularImageView
    android:layout_width="50dp"
    android:layout_height="50dp"
    android:src="@drawable/ic_launcher"
    android:id="@+id/view6"
    android:layout_below="@+id/textView39"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="18 days ago"
        android:id="@+id/textView40"
        android:layout_marginLeft="51dp"
        android:layout_marginStart="51dp"
        android:layout_alignTop="@+id/textView39"
        android:layout_toRightOf="@+id/textView39"
        android:layout_toEndOf="@+id/textView39"
        android:textSize="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello,This is Android Bot"
        android:id="@+id/textView41"
        android:layout_alignBottom="@+id/view6"
        android:layout_alignLeft="@+id/textView39"
        android:layout_alignStart="@+id/textView39"
        android:textSize="15dp"
        android:padding="10dp"
        android:background="#f9f9f9" />
</RelativeLayout>